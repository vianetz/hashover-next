    "license": "AGPL-3.0-only",
    "require": {
        "php": "^7.4|^8.0",
        "ext-mbstring": "*",
        "ext-intl": "*",
        "ext-xml": "*",
        "ext-json": "*",
        "ext-date": "*",
        "ext-dom": "*",
        "ext-openssl": "*",
        "ext-pcre": "*",
        "swiftmailer/swiftmailer": "^6.2",
        "monolog/monolog": "^2.2",
